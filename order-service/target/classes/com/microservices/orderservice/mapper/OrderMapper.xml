<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microservices.orderservice.mapper.OrderMapper">
    <select id="lastInsertId" resultType="Integer">
        SELECT last_insert_id()
    </select>

    <insert id="saveOrder">
        INSERT INTO orders (
            order_number
        ) VALUES (
            #{order.orderNumber}
        )
    </insert>

    <insert id="placeOrder" parameterType="List">
        INSERT INTO order_line_items (
            product_id,
            price,
            quantity,
            order_id
        ) VALUES
        <foreach collection="orderLineItemsList" item="item" index="index">
            (
                #{item.productId},
                #{item.price},
                #{item.quantity},
                #{orderId}
            ),
        </foreach>
    </insert>
</mapper>